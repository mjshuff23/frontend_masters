{
  "compilerOptions": {
    "declaration": true,  // generate declaration files
    "declarationMap": true, // generate sourcemap for declaration files
    "outDir": "./dist/", // output directory
    "target": "ESNext",   // target ES version
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
  },
  "include": [           // files to compile
    "./src/**/*"
  ]
}